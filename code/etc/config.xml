<config>
    <modules>
        <Ash_Jquery>
             <version>1.1.0</version>
        </Ash_Jquery>
    </modules>

    <global>
        <helpers>
            <ash_jquery>
                <class>Ash_Jquery_Helper</class>
            </ash_jquery>
        </helpers>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Ash_Jquery>
                    <files>
                        <default>Ash_Jquery.csv</default>
                    </files>
                </Ash_Jquery>
            </modules>
        </translate>
        <layout>
            <updates>
                <ash_jquery>
                    <file>ash_jquery.xml</file>
                </ash_jquery>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <ash_jquery>
                    <file>ash_jquery.xml</file>
                </ash_jquery>
            </updates>
        </layout>
    </frontend>

    <default>
        <ash_jquery>
            <jquery>
                <front_enabled>1</front_enabled>
                <admin_enabled>0</admin_enabled>
            </jquery>
            <jquery_ui>
                <front_enabled>0</front_enabled>
                <admin_enabled>0</admin_enabled>
            </jquery_ui>
        </ash_jquery>
    </default>
</config>
