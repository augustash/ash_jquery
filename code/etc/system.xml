<config>
    <sections>
        <ash_jquery translate="label" module="ash_jquery">
            <label>jQuery</label>
            <tab>ash</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <jquery translate="label" module="ash_jquery">
                    <label>jQuery Library</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <front_enabled translate="label" module="ash_jquery">
                            <label>Enable Frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </front_enabled>
                        <admin_enabled translate="label" module="ash_jquery">
                            <label>Enable Admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </admin_enabled>
                    </fields>
                </jquery>
                <jquery_ui translate="label" module="ash_jquery">
                    <label>jQuery UI</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <front_enabled translate="label" module="ash_jquery">
                            <label>Enable Frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </front_enabled>
                        <admin_enabled translate="label" module="ash_jquery">
                            <label>Enable Admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </admin_enabled>
                    </fields>
                </jquery_ui>
            </groups>
        </ash_jquery>
    </sections>
</config>
